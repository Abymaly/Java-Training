<?xml version="1.0" encoding="UTF-8"?>

<!--comment-->

<FSM>

    <STATE id="START" type="ID">
        <MESSAGE id="GO" action="go" nextState="P1_TURN"/>
    </STATE>

    <STATE id="P1_TURN">
        <MESSAGE id="MOVE" action="move" nextState="P2_TURN"/>
        <MESSAGE id="FULL" action="finish" nextState="STOP"/>
    </STATE>

    <STATE id="P2_TURN">
        <MESSAGE id="MOVE" action="move" nextState="P1_TURN"/>
        <MESSAGE id="FULL" action="finish" nextState="STOP"/>
    </STATE>

    <STATE id="STOP">
        <MESSAGE id="RESTART" action="again" nextState="START"/>
    </STATE>

</FSM>